<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
  <div class="field">
     <%= f.text_field :name, autofocus: true, placeholder: "First and Last Name", class: 'form-control' %>
   </div><br />

   <div class="field">
     <%= f.text_field :username, placeholder: "@Username", class: 'form-control' %>
   </div><br />

   <div class="field">
     <%= f.text_field :location, placeholder: "Charlotte, North Carolina", class: 'form-control' %>
   </div><br />


   <div class="field">
     <%= f.text_field :bio, placeholder: "Your Bio here.", class: 'form-control' %>
   </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-default' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
